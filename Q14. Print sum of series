#include <stdio.h>
#include <math.h>

int main() {
    int n;
    float x, sum = 1.0, fact = 1.0;

    printf("Enter x and n: ");
    scanf("%f %d", &x, &n);

    for (int i = 1; i <= n; i++) {
        fact *= i;
        sum += pow(x, i) / fact;
    }

    printf("Sum = %.2f\n", sum);
    return 0;
}
