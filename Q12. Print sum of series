#include <stdio.h>

int main() {
    int n;
    float sum = 0.0;

    printf("Enter value of n: ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        if (i % 2 == 0)
            sum -= 1.0 / i;
        else
            sum += 1.0 / i;
    }

    printf("Sum = %.2f\n", sum);
    return 0;
}
